<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_number">


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_number"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnYellow"
        android:background="@drawable/bt_one"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnOrange"
        android:background="@drawable/bt_three"
        android:layout_below="@+id/btnYellow"
        android:layout_alignStart="@+id/btnYellow"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnSkyBlue"
        android:background="@drawable/bt_two"
        android:layout_alignTop="@+id/btnYellow"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="100dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnBlue"
        android:background="@drawable/bt_four"
        android:layout_below="@+id/btnSkyBlue"
        android:layout_alignStart="@+id/btnSkyBlue"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnRed"
        android:background="@drawable/bt_five"
        android:layout_below="@+id/btnOrange"
        android:layout_alignStart="@+id/btnOrange"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnGreen"
        android:background="@drawable/bt_six"
        android:layout_below="@+id/btnBlue"
        android:layout_alignStart="@+id/btnBlue"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnPink"
        android:background="@drawable/bt_seven"
        android:layout_below="@+id/btnRed"
        android:layout_alignStart="@+id/btnRed"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnBlack"
        android:background="@drawable/bt_eight"
        android:layout_below="@+id/btnGreen"
        android:layout_alignStart="@+id/btnGreen"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnNine"
        android:background="@drawable/bt_nine"
        android:layout_alignTop="@+id/btnTen"
        android:layout_alignStart="@+id/btnPink" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnTen"
        android:background="@drawable/bt_ten"
        android:layout_below="@+id/btnBlack"
        android:layout_alignStart="@+id/btnBlack"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnHome"
        android:background="@drawable/bt_home"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnNine" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnSound"
        android:background="@drawable/bt_sound"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>