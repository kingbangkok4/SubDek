<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_color">


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:id="@+id/button"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_color"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnHome"
        android:background="@drawable/bt_home"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnPurple" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnSound"
        android:background="@drawable/bt_sound"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnPurple" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnYellow"
        android:background="@drawable/bt_yellow"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnOrange"
        android:background="@drawable/bt_orange"
        android:layout_below="@+id/btnYellow"
        android:layout_alignStart="@+id/btnYellow"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnSkyBlue"
        android:background="@drawable/bt_skyblue"
        android:layout_alignTop="@+id/btnYellow"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnBlue"
        android:background="@drawable/bt_blue"
        android:layout_below="@+id/btnSkyBlue"
        android:layout_alignStart="@+id/btnSkyBlue"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnRed"
        android:background="@drawable/bt_red"
        android:layout_below="@+id/btnOrange"
        android:layout_alignStart="@+id/btnOrange"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnGreen"
        android:background="@drawable/bt_green"
        android:layout_below="@+id/btnBlue"
        android:layout_alignStart="@+id/btnBlue"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnPink"
        android:background="@drawable/bt_pink"
        android:layout_below="@+id/btnRed"
        android:layout_alignStart="@+id/btnRed"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnBlack"
        android:background="@drawable/bt_black"
        android:layout_below="@+id/btnGreen"
        android:layout_alignStart="@+id/btnGreen"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnPurple"
        android:background="@drawable/bt_purple"
        android:layout_below="@+id/btnPink"
        android:layout_alignStart="@+id/btnPink"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:id="@+id/btnWhite"
        android:background="@drawable/bt_white"
        android:layout_below="@+id/btnBlack"
        android:layout_alignStart="@+id/btnBlack"
        android:layout_marginTop="20dp" />

</RelativeLayout>